{
  "name": "@aiqia/corex-ai-mindlayer",
  "version": "1.0.3",
  "description": "Universal .ai.json-based standard for assistant-readable architecture and AI-ready project knowledge",
  "type": "module",
  "main": "ai-init.php",
  "files": [
    ".ai.json.example",
    "ai-init.php",
    "schema.json",
    "README.md",
    "LICENSE",
    "AI-INTEGRATION.md",
    "INSTALL.md",
    "scanners"
  ],
  "scripts": {
    "validate": "node validate.js",
    "validate:example": "node validate.js .ai.json.example",
    "validate:all": "node validate.js '.ai.json*'",
    "lint": "jsonlint .ai.json.example && php -l ai-init.php",
    "test": "npm run validate && npm run lint",
    "install-example": "cp .ai.json.example .ai.json",
    "check-syntax": "find . -name '*.php' -exec php -l {} \\;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AIQIA/corex-ai-mindlayer.git"
  },
  "keywords": [
    "ai",
    "artificial-intelligence",
    "json-schema",
    "project-metadata",
    "developer-tools",
    "documentation",
    "ai-assistant",
    "chatgpt",
    "copilot",
    "context-layer",
    "mindlayer",
    "aiqia"
  ],
  "author": "Sascha Buscher <info@aiqia.de> (https://aiqia.de)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AIQIA/corex-ai-mindlayer/issues"
  },
  "homepage": "https://github.com/AIQIA/corex-ai-mindlayer#readme",
  "engines": {
    "node": ">=18.0.0",
    "php": ">=7.4"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "jsonlint": "^1.6.3"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/AIQIA"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ansi-styles": "^1.0.0",
    "chalk": "^0.4.0",
    "has-color": "^0.1.7",
    "JSV": "^4.0.2",
    "lodash": "^4.17.21",
    "strip-ansi": "^0.1.1",
    "yargs": "^18.0.0"
  }
}
